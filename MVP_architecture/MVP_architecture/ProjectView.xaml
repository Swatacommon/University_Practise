<Window x:Class="MVP_architecture.ProjectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_architecture"
        mc:Ignorable="d"
        Title="ProjectView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Проекты:" Margin="5, 0, 5, 0" />
            <ComboBox Name="projectsComboBox" Margin="5, 0, 5, 0"
                SelectionChanged="projectsComboBox_SelectionChanged" />
            <Label Content="Название:" Margin="5, 0, 5, 0" />
            <TextBox Name="nameTextBox" Margin="5, 0, 5, 0"
                IsEnabled="False" />
            <Label Content="Предположительная стоимость проекта:" Margin="5, 0, 5, 0" />
            <TextBox Name="estimatedTextBox" Margin="5, 0, 5, 0"
                IsEnabled="False" />
            <Label Content="Фактическая стоимость проекта:" Margin="5, 0, 5, 0" />
            <TextBox Name="actualTextBox" Margin="5, 0, 5, 0"
                IsEnabled="False" />
            <Button Name="updateButton" Content="Обновить"
                Margin="5, 0, 5, 0" IsEnabled="False"
                Click="updateButton_Click" />
        </StackPanel>
    </Grid>
</Window>
